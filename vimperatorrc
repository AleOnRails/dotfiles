" disable beep
set noerrorbells
set novisualbell

" arrange statusline order
set status=location,input,bookmark,history,tabcount,position

" use MacVim
set editor='bash -lc "mvim -f \$*" mvim '

" leader!
let mapleader=","

" tab navigation
nmap <S-Right> gt
nmap <S-Left> gT

" switch between latest tabs
nmap <Leader><Leader> <C-^>

" faster moving
nnoremap j 5j
nnoremap k 5k

" some smart search configuration
set hlsearch
set incsearch
set ignorecase
set smartcase
nnoremap <Esc> :nohl<CR>

" Alt is broken in normal mode
nnoremap Ã² @

" show the available tabs
noremap <leader>b :buffers<CR>

" disable vimperator on gmail
autocmd LocationChange .* js modes.passAllKeys = /mail\.google\.com/.test(buffer.URL)
autocmd LocationChange .* echo ""

" vim: ft=vim
